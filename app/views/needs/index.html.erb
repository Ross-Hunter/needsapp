<h1>Listing needs</h1>

<form action="/needs">
  <input type="text" class="date-query" name="start_date" />
  <input type="text" class="date-query" name="end_date" />
  <input type="submit" value="Submit" />
</form>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Date Needed</th>
  </tr>

<% @needs.each do |need| %>
  <tr>
    <td><%= link_to need.title, need %></td>
    <td><%= need.desc %></td>
    <td><%= need.date %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Need', new_need_path %>
