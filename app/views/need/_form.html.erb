
<div class="clearfix">
   <%= f.label :title, t("activerecord.attributes.need.title", :default => "Title"), :class => :label %>
  <div class="input">
    <%= f.text_field :title, :class => 'text_field' %>
  </div>
</div>

<div class="clearfix">
   <%= f.label :desc, t("activerecord.attributes.need.desc", :default => "Desc"), :class => :label %>
  <div class="input">
    <%= f.text_area :desc, :class => 'text_area' %>
  </div>
</div>

<div class="clearfix">
   <%= f.label :datetime1, t("activerecord.attributes.need.datetime1", :default => "Datetime1"), :class => :label %>
  <div class="input">
    <%= f.datetime_select :datetime1, :class => 'datetime_select' %>
  </div>
</div>

</div>
<div class="form-actions">
  <button class="btn primary" type="submit">Save</button> or
	<%= link_to "Cancel", need_path %>
</div>
