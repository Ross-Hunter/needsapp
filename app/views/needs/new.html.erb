<% body_id 'new' %>
<% body_class 'needs' %>

<h1>New need</h1>
<%= form_for(@need) do |f| %>
  <% if @need.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@need.errors.count, "error") %> prohibited this need from being saved:</h2>

      <ul>
      <% @need.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :desc %><br />
    <%= f.text_area :desc,
                    :rows => 5 %>
  </div>
  <div class="field">
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </div>


  <div class="slots">
    <h4>Sign-Up Slots</h4>
    <%= f.fields_for :slots do |s| %>
    <div class ="slot">
      <%= s.label :notes %>
      <%= s.text_field :notes %>

    </div>
  <% end %>
  </div>

  <button id="new_slot" class="btn">
    Add Slot
  </button>

  <div class="actions">
    <%= f.submit 'Post Need', :class => 'btn' %>
  </div>

<%= link_to 'Back', needs_path %>
<% end %>
