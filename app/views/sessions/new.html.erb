<% body_id 'login' %>
<% body_class 'login' %>

	<div class="logo">
	  <img src="/assets/logo.png">
	</div>

	<h1>Log in to <br />
		<%= Configurable.site_title %></h1>

	<p><%= Configurable.login_description %></p>

	<%= form_tag sessions_path do %>
		<%= password_field_tag :password %>
		<br />
	  <%= submit_tag "Log in", :class=>'btn btn-info submit' %>
	<% end %>