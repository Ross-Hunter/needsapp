<% body_id 'edit' %>
<% body_class 'needs' %>

<h1>Editing need</h1>
<%= form_for(@need) do |f| %>
  <% if @need.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@need.errors.count, "error") %> prohibited this need from being saved:</h2>

      <ul>
      <% @need.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<p>
	  <b>Title:</b>
	  <%= @need.title %>
	</p>

	<p>
	  <b>Desc:</b>
	  <%= @need.desc %>
	</p>

	<p>
	  <b>Date:</b>
	  <%= @need.date %>
	</p>

  <div class="slots">
    <h4>Sign-Up Slots</h4>

	<% @need.slots.each do |slot| %>
	<p>
	  <%= slot.notes %>
	</p>
	<% end %>

    <%= f.fields_for :slots do |s| %>
    <div class ="slot">
      <%= s.label :name %>
      <%= s.text_field :name %>
    </div>
  <% end %>
  </div>

  <div class="actions">
    <%= f.submit 'Post Need', :class => 'btn' %>
  </div>

<%= link_to 'Show', @need %> |
<%= link_to 'Back', needs_path %>
<% end %>
