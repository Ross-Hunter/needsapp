<%= form_for(@need) do |f| %>
  <% if @need.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@need.errors.count, "error") %> prohibited this need from being saved:</h2>

      <ul>
      <% @need.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :desc, 'Description' %><br />
    <%= f.text_area :desc,
                    :rows => 5 %>
  </div>
  <div class="field">
    <%= f.label :date %><br />
    <%= f.datetime_select :date %>
  </div>


  <div class="slots">
    <h4>Sign-Up Slots</h4>
    <%= f.fields_for :slots do |s| %>
    <div class ="slot">
      <%= s.text_field :name %>
      <%= link_to 'Remove Slot', s.object, :class=> 'btn remove_slot', method: :delete%>
    </div>
  <% end %>
  </div>

  <div class="actions">
    <button id="new_slot" class="btn">
      Add Slot
    </button>
    <%= f.submit 'Post Need', :class => 'btn submit', :id => 'post_need' %>
  </div>
<% end %>
