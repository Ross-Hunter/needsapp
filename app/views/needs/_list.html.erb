<div class="logo">
  <img src="/assets/logo.png">
</div>

<% if @category %>
  <h1><%= @category.title %>:</h1>
  <div class="category-description">
    <%= @category.desc.html_safe %>
  </div>
<% else %>
  <h1>New Hope Lutheran Needs Board</h1>
  <div class="category-description">
    Welcome to our needs board. If you have something you would like posted on this board then contact somebody or something. Maybe some more info.
  </div>
<% end %>

<% if @needs.first %>
  <% @needs.each do |need| %>
    <div class="need">
      <%= form_for(need) do |form| %>
      <div class="category">
        <span class="label"><%= need.category.title unless need.category.blank? %></span>
      </div>
      <div class="slots">
        <h5>Sign Up to Help</h5>
        <%= form.fields_for :slots do |slot| %>
          <div class ="slot">
            <div class = "note"><%= slot.object.note %></div>
            <% if slot.object.name && slot.object.name > '' %>
              <%= slot.text_field :name, :readOnly => 'true', :class=> 'text' %>
            <% else %>
              <%= slot.text_field :name, :class=> 'text' %>
              <%= form.submit 'Sign Up', :class => 'btn' %>
            <% end %>
          </div>
        <% end %>
        </div>
      <% end %>
      <% if current_user %>
        <h3 class="title"><%= link_to need.title, edit_need_path(need) %></h3>
      <% else %>
        <h3 class="title"><%= need.title %></h3>
      <% end %>

      <div class="date"><%= need.date.strftime('%A %B %d') %>
        <% if need.time1 > '' %>
          <span class="time"> - <%= need.time1 %>:<%= need.time2 %> <%= need.time3 %></span>
        <% end %>
      </div>
      <div class="desc"><%= need.desc.html_safe %></div>
    </div>
  <% end %>
<% else %>
  <div>No needs matched your search</div>
<% end %>
